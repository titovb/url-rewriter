{
  "name": "api",
  "version": "0.0.0",
  "main": "main.js",
  "author": "titovb",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node --env-file=.env dist/main.js",
    "start:watch": "cross-env NODE_ENV=development node --env-file=.env --watch dist/main.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm run build:watch\" \"pnpm run start:watch\"",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier src test -w",
    "test": "glob -c \"cross-env NODE_ENV=test tsx --tsconfig ./test/tsconfig.json --test --test-concurrency=1\" \"./test/**/*.test.ts\"",
    "test:coverage": "c8 pnpm run test",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.34",
    "ajv": "^8.16.0",
    "ajv-formats": "^3.0.1",
    "drizzle-orm": "^0.31.2",
    "drizzle-typebox": "^0.1.1",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "pg": "^8.12.0",
    "pino-pretty": "^11.2.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "c8": "^10.1.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.22.8",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "fastify-tsconfig": "^2.0.0",
    "glob": "^10.4.3",
    "prettier": "3.3.2",
    "tsx": "^4.16.2",
    "typescript-eslint": "^8.0.0-alpha.39"
  }
}
